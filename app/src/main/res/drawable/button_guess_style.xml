<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item  android:state_active="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="12dip"/>

            <gradient android:angle="-90" android:startColor="#8dbaff" android:endColor="#bbdcdd" />
<!-- bbdcdd-->
        </shape>
    </item>
    <item  android:state_pressed="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="12dip"/>
            <stroke android:width="3dip" android:color="#bddaFF" />
            <gradient android:angle="-90" android:startColor="#2d6acf" android:endColor="#5d9aff" />

        </shape>
    </item>
</selector>